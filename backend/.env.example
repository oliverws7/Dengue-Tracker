# ============================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# MONGODB (use Atlas ou local)
# ============================================
# Exemplo MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
# Exemplo MongoDB Local: mongodb://localhost:27017/dengue-tracker-dev
MONGODB_URI=mongodb://localhost:27017/dengue-tracker-dev
MONGODB_DB_NAME=dengue-tracker-dev

# ============================================
# JWT (GERE SUA PRÓPRIA CHAVE SEGURA!)
# ============================================
# IMPORTANTE: Gere uma chave forte em produção
# Comando: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=sua-chave-secreta-muito-segura-aqui-mudao-em-producao
JWT_EXPIRES_IN=7d
JWT_ISSUER=dengue-tracker-api
JWT_AUDIENCE=dengue-tracker-app

# Refresh Token
JWT_REFRESH_SECRET=sua-chave-refresh-muito-segura-aqui
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# CORS - Frontend
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:19006

# ============================================
# WEBSOCKET
# ============================================
ENABLE_SOCKET_IO=true
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# ============================================
# UPLOAD
# ============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,image/gif,image/webp
UPLOAD_DIR=./src/uploads

# ============================================
# FEATURES & SEGURANÇA
# ============================================
ENABLE_SWAGGER=true
SWAGGER_URL=/api-docs
LOG_LEVEL=debug